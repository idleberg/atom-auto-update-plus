{
  "name": "auto-update-plus",
  "version": "0.10.5",
  "description": "Keeps your Atom packages up to date",
  "license": "MIT",
  "contributors": [
    {
      "name": "Jan T. Sott",
      "url": "https://github.com/idleberg"
    },
    {
      "name": "Yuji Nakayama",
      "url": "https://github.com/yujinakayama"
    }
  ],
  "main": "./lib/index",
  "scripts": {
    "analyze": "source-map-explorer lib/**/*.js",
    "build": "node ./tools/build.mjs",
    "dev": "npm run start",
    "format": "prettierx --write ./src",
    "lint:code": "eslint --ignore-path .gitignore --no-error-on-unmatched-pattern ./src/**/*.ts",
    "lint:styles": "echo \"Nothing to lint\"",
    "lint": "npm-run-all --parallel lint:*",
    "prepublishOnly": "npm run build",
    "start": "cross-env ESBUILD_WATCH=true node ./tools/build.mjs",
    "test": "npm run lint"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-auto-update-plus"
  },
  "homepage": "https://atom.io/packages/auto-update-plus",
  "bugs": {
    "url": "https://github.com/idleberg/atom-auto-update-plus/issues"
  },
  "engines": {
    "atom": ">=1.52.0 <2.0.0"
  },
  "activationCommands": {
    "atom-workspace": [
      "auto-update-plus:update-now"
    ]
  },
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "consumedServices": {
    "busy-signal": {
      "versions": {
        "1.0.0": "consumeSignal"
      }
    }
  },
  "package-deps": [
    {
      "name": "busy-signal"
    }
  ],
  "dependencies": {},
  "devDependencies": {
    "@atxm/developer-console": "^0.5.0",
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.14.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.14.2",
    "@babel/preset-env": "^7.14.4",
    "@types/atom": "^1.40.10",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "atom-package-deps": "^7.2.3",
    "core-js": "^3.14.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.12.7",
    "eslint": "^7.28.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-plugin-json": "^3.0.0",
    "execa": "^5.1.1",
    "husky": ">=4.3 <5",
    "jsonlint": "^1.6.3",
    "lint-staged": "^11.0.0",
    "log-symbols": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettierx": "^0.18.1",
    "semver-diff": "^4.0.0",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^13.13.1",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.json": "jsonlint --quiet",
    "*.{md,yml}": "prettierx --write"
  }
}
